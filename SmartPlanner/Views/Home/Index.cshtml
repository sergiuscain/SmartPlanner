@model List<NoteViewModel>

<div>
    <div class="row">
    @await Html.PartialAsync("/Views/Home/Components/AddNoteForm.cshtml", new NoteViewModel())
    @{
        if(Model.Count > 0){
            foreach (var note in Model)
            {
                @await Html.PartialAsync("/Views/Home/Components/NoteCard.cshtml", note)
            }
        }
        else{
            <p>Создайте свою первую заметку...</p>
        }
    }
    </div>
</div>