@model NoteViewModel

<div class="col-3 m-1 card  cardParam">
    <div class="card-body d-flex flex-column">
        <a asp-area="" asp-controller="Home" asp-action="Note" asp-route-id="@Model.Id"><h5 class="card-title">@Model.Title</h5></a>
        <p class="card-text">@Model.Description</p>
        <a asp-area="" asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mt-auto">Удалить</a>
    </div>
</div>