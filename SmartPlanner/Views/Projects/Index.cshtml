@model List<ProjectViewModel>

<div>
    <div class="row">
        <div class="row justify-content-center">
            @{
                if (Model.Count > 0)
                {
                    foreach (var project in Model)
                    {
                        @await Html.PartialAsync("/Views/Projects/Components/ProjectCard.cshtml", project)
                    }
                }
                else
                {
                    <p>Создайте свой первый проект...</p>
                }
            }
            <a asp-action="Create">Создать</a>
        </div>
    </div>
</div>