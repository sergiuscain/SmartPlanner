@model List<TaskViewModel>

<div>
    <div class="row">
        @await Html.PartialAsync("/Views/Task/Components/TasksStatusMenu.cshtml")
        <div class="row justify-content-center">
            @{
                if (Model.Count > 0)
                {
                    foreach (var task in Model)
                    {
                        @await Html.PartialAsync("/Views/Task/Components/TaskCard.cshtml", task)
                    }
                }
                else
                {
                    <p>Здесь пусто...</p>
                }
            }
        </div>
    </div>
    <div id="createTaskButton" class="text-center"><a id="createTaskButtonA" asp-area="" asp-asp-controller="Task" asp-action="Create">+</a> </div>
</div>